<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DejssaGameTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/background_material_light</item>
    </style>

    <style name="Button" parent="Base.TextAppearance.AppCompat.Button">
        <item name="textAllCaps">false</item>
        <item name="android:background">@drawable/dlg_button</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_marginLeft">8sp</item>
    </style>

    <style name="DlgButton" parent="Button">
        <item name="textAllCaps">false</item>
        <item name="android:background">@drawable/dlg_button</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_marginTop">8sp</item>
        <item name="android:layout_marginBottom">8sp</item>
        <item name="android:layout_marginLeft">40sp</item>
        <item name="android:layout_marginRight">40sp</item>


        <item name="android:width">200sp</item>


    </style>

    <style name="ScoreTxt" parent="android:style/TextAppearance.Medium">
        <item name="android:padding">8sp</item>
        <item name="android:textSize">@dimen/test_txt_size</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ScoreLine" parent="android:style/TextAppearance.Medium">
        <item name="android:padding">8sp</item>
        <item name="android:textSize">@dimen/score_txt_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">8sp</item>
        <item name="android:layout_marginBottom">8sp</item>
        <item name="android:layout_marginLeft">40sp</item>
        <item name="android:layout_marginRight">40sp</item>
    </style>

    <style name="ScoreNameEnter" parent="Base.Widget.AppCompat.EditText">
        <item name="background">@color/background_dlg</item>
        <item name="android:padding">8sp</item>
        <item name="android:textSize">@dimen/score_txt_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">8sp</item>
        <item name="android:layout_marginBottom">8sp</item>
        <item name="android:layout_marginLeft">20sp</item>
        <item name="android:layout_marginRight">20sp</item>
    </style>
</resources>
